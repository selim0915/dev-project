{
  "configurations": [
    {
      "name": "CHROME",
      "request": "launch",
      "type": "chrome",
      "url": "https://localhost:9001",
      "webRoot": "${workspaceFolder}/project"
    },
    {
      "name": "NODE",
      "request": "launch",
      "type": "node",
      "runtimeArgs": ["-r", "ts-node/register"],
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/project/server.dev.js",
      "cwd": "${workspaceFolder}/project",
      "skipFiles": ["node_modules/**"],
      "sourceMaps": true
    }
  ]
}
